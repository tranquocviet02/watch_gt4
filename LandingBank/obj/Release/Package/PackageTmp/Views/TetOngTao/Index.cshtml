            var itemsPerPage = 5; // Số lượng mục hiển thị mỗi lần

            function loadData(type, offset) {
                $.ajax({
                    url: '/Ajax/Price',
                    method: 'POST',
                    dataType: 'json',
                    data: { "id": ids, "offset": offset, "limit": itemsPerPage, "type": type },
                    success: function (data) {
                        $(data).each(function (index, value) {
                            if (value.Type && (value.Type.Title === "Tai nghe" || value.Type.Title === "Loa" || value.Type.Title === "Tivi" || value.Type.Title === "Điện thoại" || value.Type.Title === "Đồng hồ thông minh" || value.Type.Title === "Laptop" || value.Type.Title === "Màn hình máy tính" || value.Type.Title === "table")) {
                                var templateId = '';

                                if (value.Type.Title === "Tai nghe" || value.Type.Title === "Loa") {
                                    templateId = 'earphone_loa';
                                } else if (value.Type.Title === "Tivi") {
                                    templateId = 'tivi';
                                } else if (value.Type.Title === "Điện thoại") {
                                    templateId = 'phone';
                                } else if (value.Type.Title === "Đồng hồ thông minh") {
                                    templateId = 'watch';
                                } else if (value.Type.Title === "Laptop" || value.Type.Title === "Màn hình máy tính" || value.Type.Title === "table") {
                                    templateId = 'lap_screen_table';
                                }

                                var arrayImages = JSON.parse(value.Image);
                                var imageUrl = '/i/productlist/ts' + arrayImages[0].Url;

                                $("#itemTemplate_" + templateId + " .product-image").attr('src', imageUrl);
                                $("#itemTemplate_" + templateId).tmpl({ value: value, imageUrl: imageUrl }).appendTo("#html_holder_" + templateId);
                            }
                        });
                    },
                    error: function (error) {
                        console.error('Error fetching data:', error);
                    }
                });
            }

            // Load initial data
            loadData("Tai nghe", 0);
            loadData("Tivi", 0);
            loadData("Điện thoại", 0);
            loadData("Đồng hồ thông minh", 0);

            // Xử lý sự kiện click nút "Xem thêm"
            var offsetEarphone = 1; // Bắt đầu từ trang thứ 2
            var offsetTivi = 1;
            var offsetPhone = 1;
            var offsetWatch = 1;

            $("#loadMoreEarphone button").on("click", function () {
                loadData("Tai nghe", offsetEarphone * itemsPerPage);
                offsetEarphone++;
            });

            $("#loadMoreTivi button").on("click", function () {
                loadData("Tivi", offsetTivi * itemsPerPage);
