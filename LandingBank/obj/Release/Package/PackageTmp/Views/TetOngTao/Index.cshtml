    <script type="text/javascript">
        $(document).ready(function () {
            $.post('/Ajax/Price', { "id": "3725,3911" }, function (data) {
                $(data).each(function (index, value) {
                    var priceContainer = $('#idsanpham_' + value.ID);
                    if (priceContainer.length > 0) {
                        var formattedPrice = parseFloat(value.BestPrice).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                        if (!isNaN(value.BestPrice) && value.BestPrice !== null && value.BestPrice !== undefined && value.BestPrice !== "") {
                            priceContainer.html('<li class="title-price formatted-number resetfont">' + formattedPrice + '</li>');
                        } else {
                            priceContainer.html('');
                        }
                    }

                    var priceLastPrice = $('#idsanpham_LastPrice_' + value.ID);
                    if (priceLastPrice.length > 0) {
                        var lastPrice = parseFloat(value.LastPrice);
                        var formattedLastPrice = isNaN(lastPrice) || !lastPrice ? 0 : lastPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                        if (!isNaN(value.LastPrice) && value.LastPrice !== null && value.LastPrice !== undefined && value.LastPrice !== "") {
                            priceLastPrice.html('<li class="title-price formatted-number">' + formattedLastPrice + '</li>');
                        } else {
                            priceLastPrice.html('');
                        }
                    }


                    var Image_ck = $('#idsanpham_Image_' + value.ID);
                    if (Image_ck.length > 0) {
                        var arrayImages = JSON.parse(value.Image);
                        var imageUrl = '/i/productlist/ts' + arrayImages[0].Url
                        Image_ck.attr('src', imageUrl);
                    }

                    var title_ck = $('#idsanpham_title_' + value.ID);
                    if (title_ck.length > 0) {
                        var title = value.Title;
                        var TitleString = title.replace('- Chính hãng', '');
                        title_ck.html(TitleString);
                    }

                    var href_ck = $('#idsanpham_href_' + value.ID);
                    if (href_ck.length > 0) {
                        var hrefUrl = value.UID + '?buy=1'; // Corrected variable name to hrefUrl for URL construction
                        href_ck.attr('href', hrefUrl);
                    }

                    var href_ck2 = $('#idsanpham_href2_' + value.ID);
                    if (href_ck2.length > 0) {
                        var href2 = value.UID + '?buy=1';
                        href_ck2.attr('href', href2);
                    }
                });
            });
        });

    </script>
