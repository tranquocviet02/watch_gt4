@{
    ViewBag.Title = "Đăng ký trước Redmi Note 13 Series - Trọn nét độc bản";
    Layout = "~/Views/Shared/_layout_Mobile.cshtml";
}

@section meta {
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no">
    <meta name="description"
            content="[05 - 15/01] Đăng ký trước Redmi Note 13 Series - Nhân ưu đãi ngay. Giảm ngay 500.000đ trên giá sản phẩm + Trả góp 0% + Bảo hành 18 tháng">
    <meta property="og:image" content="~/Content/n3/img/thumb-landing-đăng-ký-redmi-note-13-series.jpg?@DateTime.Now">
    <meta property="og:url" content="https://hoanghamobile.com/dang-ky-xiaomi-redmi-note-13-series">

    <link rel="stylesheet" href="~/Content/n3/js-css/swiper-bundle.min.css" />
    <script src="~/Content/n3/js/jquery-3.5.1.min.js?@DateTime.Now"></script>
    <link rel="stylesheet" href="~/Content/n3/css/bootstrap.min.css?@DateTime.Now">
    <link rel="stylesheet" href="~/Content/n3/js-css/web_Desktop.css?@DateTime.Now">
    <link rel="stylesheet" href="~/Content/n3/js-css/style.css?@DateTime.Now">
}


<main class="main-content W-100">

    <section class="Content-v1 max-w-1200px w-100">
        <div class="w-100 position-relative">
            <img class="w-100" src="~/Content/n3/img/RMN13_HIDDEN MB.jpg">
            <a class="button-add-orange btn-buy mi-btn__text color-white position-absolute start-45 bottom-15px" href="">ĐĂNG KÝ NGAY</a>
        </div>
        <div class="w-100  d-flex-center background-black">
            <video autoplay controls loop muted class=" w-70 pc_video lazyloading"
                   src="~/Content/n3/video/video n13.mp4">
            </video>
        </div>

         <div class="d-flex text-align-center button-slide margin-20px-0 ">
            <button class="resetfont div-banner-item btn-add-all click-oppo-n3 text-btn-add Reserve active">
                OPPO Find N3
            </button>
            <button class="resetfont div-banner-item btn-add-all click-oppo-n3-pro text-btn-add ">
                OPPO Find N3 Flip
            </button>
        </div>

        <section class="w-100 flex-column-center" id="oppo-n3">
            <div class="flex-column-center margin-bottom-20px">
                <img class="w-50" src="~/Content/n3/img/Redmi-note-13.png">
                <a class="button-add-orange btn-buy mi-btn__text color-white" href="">ĐĂNG KÝ NGAY</a>
            </div>
            <div class="swiper mySwiper w-100">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13/tin đồn redmi note 13-10.png">
                    </div>
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13/tin đồn redmi note 13-11.png">
                    </div>
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13/tin đồn redmi note 13-12.png">
                    </div>
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13/tin đồn redmi note 13-13.png">
                    </div>
                </div>
                @* <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div> *@
                <button class="start_css swiper-button-prev" type="button" onclick="plusDivs_accessory(-1)" tabindex="0"
                    aria-label="Previous slide" aria-controls="product-container-compare">
                    <svg class="start_css" xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50"
                        fill="none">
                        <rect width="50" height="50" rx="25" fill="#DBF9EB"></rect>
                        <path d="M31 13L19 25L31 37" stroke="#009981" stroke-width="3"></path>
                    </svg>
                </button>
                <button class="start_css swiper-button-next" type="button" onclick="plusDivs_accessory(1)" tabindex="0"
                    aria-label="Next slide" aria-controls="product-container">
                    <svg class="start_css" xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50"
                        fill="none">
                        <rect width="50" height="50" rx="25" fill="#DBF9EB"></rect>
                        <path d="M19 37L31 25L19 13" stroke="#009981" stroke-width="3"></path>
                    </svg>
                </button>

                <div class="swiper-pagination"></div>
            </div>
        </section >

        <section class="w-100 flex-column-center" id="oppo-n3-pro" style="display: none;">
            <div class="flex-column-center margin-bottom-20px">
                <img class="w-50" src="~/Content/n3/img/Redmi-note-13-pro.png">
                <a class="button-add-orange btn-buy mi-btn__text color-white" href="">ĐĂNG KÝ NGAY</a>
            </div>
            <div class="swiper mySwiper w-100">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13 Pro/tin đồn redmi note 13-14.png">
                    </div>
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13 Pro/tin đồn redmi note 13-15.png">
                    </div>
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13 Pro/tin đồn redmi note 13-16.png">
                    </div>
                    <div class="swiper-slide">
                        <img class="w-100" src="~/Content/n3/img/Note 13 Pro/tin đồn redmi note 13-17.png">
                    </div>
                </div>
                @* <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div> *@
                <button class="start_css swiper-button-prev" type="button" onclick="plusDivs_accessory(-1)" tabindex="0"
                    aria-label="Previous slide" aria-controls="product-container-compare">
                    <svg class="start_css" xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50"
                        fill="none">
                        <rect width="50" height="50" rx="25" fill="#DBF9EB"></rect>
                        <path d="M31 13L19 25L31 37" stroke="#009981" stroke-width="3"></path>
                    </svg>
                </button>
                <button class="start_css swiper-button-next" type="button" onclick="plusDivs_accessory(1)" tabindex="0"
                    aria-label="Next slide" aria-controls="product-container">
                    <svg class="start_css" xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50"
                        fill="none">
                        <rect width="50" height="50" rx="25" fill="#DBF9EB"></rect>
                        <path d="M19 37L31 25L19 13" stroke="#009981" stroke-width="3"></path>
                    </svg>
                </button>

                <div class="swiper-pagination"></div>
            </div>
        </section>
    </section>

</main>

@section scripts {
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper(".mySwiper", {
            loop: true, // Lặp vô hạn các slide
            zoom: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            autoplay: {
                delay: 5000, // Thời gian chờ giữa các slide (miligiây)
                disableOnInteraction: false, // Tự động dừng khi người dùng tương tác với slider
            },
        });


    </script>
    <script src="~/Content/n3/js-css/web-n3.js?@DateTime.Now"></script>
}