            overflow: hidden !important;
            position: relative;
            height: 100%;
        }

        .video-content-2 {
            width: 100%;
            transition: transform 4s ease, rotate 4s ease;
        }

        .matrix {
            transform: matrix(1, 0, 0, 1, 0, 0) !important;
