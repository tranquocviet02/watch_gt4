            var ids = "3995,3376,3658,2892,2386,3990,3409,4026,3923,3513,3785,4061,2990,3942,2866,3694,3682,3670,3856,3410,3418,3844,3648,3373,3785,2994,1297,3270,3214,3853,1952,3349,1250,902,3901,4048,3667,4036,3872,1977,3804,3673,3481,1659,1658,1678,3211,3976,2801,3192,2833,3926,3984,606,2695,3271,3800,1723,3656,3685,2054,1231,3992,3993,3725,3911";
            $.ajax({
                url: '/Ajax/Price',
                method: 'POST',
                dataType: 'json',
                data: { "id": ids },
                success: function (data) {
                    $(data).each(function (index, value) {
                        if (value.Type) {
                            var templateId = 'phone';

                            // Determine templateId based on product type
                            if (value.Type.Title === "Tai nghe" || value.Type.Title === "Loa") {
                                templateId = 'earphone_loa';
                            } else if (value.Type.Title === "Điện thoại") {
                                templateId = 'phone';
                            } else if (value.Type.Title === "Đồng hồ thông minh") {
                                templateId = 'SMARTWATCH';
                            } else if (value.Type.Title === "Màn hình máy tính" || value.Type.Title === "Máy tính bảng" || value.Type.Title === "Laptop") {
                                templateId = 'screen_table';
                            } else if (value.Type.Title === "Robot hút bụi") {
                                templateId = 'SMARTHOME';
                            } else if (value.Type.Title === "Sạc Dự Phòng" || value.Type.Title === "Dây cáp" || value.Type.Title === "Củ Sạc" || value.Type.Title === "Phụ kiện" || value.Type.Title === "Cổng chuyển đổi dữ liệu" || value.Type.Title === "Bàn phím") {
                                templateId = 'phukien';
                            } else if (value.Type.Title === "Tivi") {
                            templateId = 'Tivi'; 
                            }
                        } 

                            // Format and display the BestPrice
                            var formattedPrice = formatCurrency(value.BestPrice);


                            // Format and display the LastPrice
                            var formattedLastPrice = formatCurrency(value.LastPrice);


                            // Parse and construct the image URL
                            var arrayImages = JSON.parse(value.Image);
                            var imageUrl = '/i/productlist/ts' + arrayImages[0].Url;

                            // Add imageUrl to the template object and append to the specified HTML holder
                            $("#itemTemplate_" + templateId).tmpl({ value: value, formattedPrice: formattedPrice, formattedLastPrice: formattedLastPrice, imageUrl: imageUrl }).appendTo("#html_holder_" + templateId);
                        }
                    });
                },
                error: function (error) {
                    console.error('Error fetching data:', error);
                }
            });

            // Function to format currency
            function formatCurrency(amount) {
                if (!isNaN(amount) && amount !== null && amount !== undefined && amount !== "") {
                    return parseFloat(amount).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                } else {
                    return ''; // Handle the case where the amount is not valid.
                }
            }
        });
    </script>
